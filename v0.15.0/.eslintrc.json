{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier", "@typescript-eslint"],
  "env": {
    "node": true,
    "es6": true,
    "es2020": true
  },
  "rules": {
    // no undef is off because its handled by typescript
    "no-undef": "off",
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
